<% layout("/layouts/boilerplate") %>

<body>
    <div class="row col-8 offset-2">
        <h2>Edit Listing</h2>
        <form action="/listings/<%= list._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" 
                name="listing[title]" 
                value="<%= list.title %>" 
                class="form-control"
                required>
                <div class="invalid-feedback">Please, Enter valid title.</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" 
                class="form-control"
                required>
                <%= list.description %>
                </textarea>
                <div class="invalid-feedback">Please, Enter Description.</div>
            </div>

             <div class="mb-3">
                <p>Original image</p>
                <img src="<%= originalImage %>" alt="" height="150" width="150">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" 
                name="listing[image]"                 
                class="form-control"
                >
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" 
                name="listing[price]" 
                value="<%= list.price %>" 
                class="form-control"
                required>
                <div class="invalid-feedback">Please, Enter Price.</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" 
                    name="listing[location]" 
                    value="<%= list.location %>" 
                    class="form-control"
                    required>
                    <div class="invalid-feedback">Please, Enter Location.</div>
                </div>
                <div class="mb-3 col-md-6">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" 
                    name="listing[country]" 
                    value="<%= list.country %>" 
                    class="form-control"
                    required>
                    <div class="invalid-feedback">Please, Enter Country.</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Categories</label><br>
                <% const cats = list.categories || []; %>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="pools" id="cat-pools"
                        <%= cats.includes('pools') ? 'checked' : '' %>>
                    <label class="form-check-label" for="cat-pools">Pools</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="mountains" id="cat-mountains"
                        <%= cats.includes('mountains') ? 'checked' : '' %>>
                    <label class="form-check-label" for="cat-mountains">Mountains</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="villa" id="cat-villa"
                        <%= cats.includes('villa') ? 'checked' : '' %>>
                    <label class="form-check-label" for="cat-villa">Villa</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="rooms" id="cat-rooms"
                        <%= cats.includes('rooms') ? 'checked' : '' %>>
                    <label class="form-check-label" for="cat-rooms">Rooms</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="listing[categories][]" value="camping" id="cat-camping"
                        <%= cats.includes('camping') ? 'checked' : '' %>>
                    <label class="form-check-label" for="cat-camping">Camping</label>
                </div>
            </div>
            <button type="submit" class="btn btn-dark offset-6 mb-3">Edit</button>
        </form>
    </div>
</body>
